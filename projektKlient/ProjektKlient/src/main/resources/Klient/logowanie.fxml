<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="300" maxWidth="250" spacing="20.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Klient.Logowanie">
   <children>
      <Label fx:id="logowanieText" text="Logowanie" textAlignment="CENTER">
         <font>
            <Font name="System Bold Italic" size="25.0" />
         </font></Label>
      <HBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0">
         <children>
            <VBox blendMode="SCREEN" prefHeight="120.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <TextField fx:id="login" alignment="CENTER" mouseTransparent="true" promptText="Login"  />
                  <PasswordField fx:id="haslo" alignment="CENTER" promptText="Haslo" />
               </children>
               <opaqueInsets>
                  <Insets bottom="1000.0" top="100.0" />
               </opaqueInsets>
               <cursor>
                  <Cursor fx:constant="MOVE" />
               </cursor>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER" opacity="0.84" prefHeight="7.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="logujButton" alignment="CENTER" contentDisplay="CENTER" onAction="#zaloguj" prefHeight="25.0" prefWidth="90.0" text="Zaloguj" textAlignment="CENTER" />
            <Button fx:id="rejestracjaButton" mnemonicParsing="false" onAction="#switchToRegister" prefHeight="25.0" prefWidth="89.0" text="Rejestracja" textAlignment="CENTER" />
         </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
